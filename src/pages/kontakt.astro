---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card, CardContent } from '@/components/ui/card';

const contactDetails = [
  {
    label: 'Telefon',
    value: '+48 123 456 789',
    href: 'tel:+48123456789',
  },
  {
    label: 'Email',
    value: 'kontakt@pracowniamysli.pl',
    href: 'mailto:kontakt@pracowniamysli.pl',
  },
  {
    label: 'Adres',
    value: 'ul. Przykładowa 10, 00-001 Warszawa',
    href: null,
  },
];

const workingHours = [
  { day: 'Poniedziałek - Piątek', hours: '9:00 - 20:00' },
  { day: 'Sobota', hours: '9:00 - 14:00' },
  { day: 'Niedziela', hours: 'Zamknięte' },
];
---

<BaseLayout
  title="Kontakt"
  description="Umów wizytę w gabinecie psychoterapii Pracownia Myśli. Kontakt telefoniczny, email. Psychoterapeuta Warszawa - wizyty stacjonarne i online."
  ogImage="/images/pracownia_mysli_oferta_contact.jpg"
>
  <!-- Hero -->
  <section class="bg-steel-50 py-12 md:py-16">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-serif text-4xl md:text-5xl font-semibold text-steel-800">
          Umów wizytę
        </h1>
      </div>
    </div>
  </section>

  <!-- Pierwsza wizyta -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="font-serif text-2xl font-semibold text-steel-800 mb-6">
          Pierwsza wizyta
        </h2>
        <p class="text-lg text-steel-700 leading-relaxed mb-4">
          Pierwsza konsultacja to okazja do poznania się i omówienia Twoich potrzeb. Podczas spotkania porozmawiamy o tym, czego oczekujesz od terapii i wspólnie ustalimy, czy możemy współpracować.
        </p>
        <p class="text-lg text-steel-700 leading-relaxed">
          Nie musisz się do niczego przygotowywać - wystarczy, że przyjdziesz.
        </p>
      </div>
    </div>
  </section>

  <!-- Dane kontaktowe -->
  <section class="py-12 md:py-16 bg-steel-50">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12">

          <!-- Contact info -->
          <div>
            <h2 class="font-serif text-2xl font-semibold text-steel-800 mb-6">
              Dane kontaktowe
            </h2>
            <div class="space-y-6">
              {contactDetails.map((detail) => (
                <div>
                  <p class="text-sm text-muted-foreground mb-1">{detail.label}</p>
                  {detail.href ? (
                    <a
                      href={detail.href}
                      class="text-lg text-steel-800 hover:text-[#F2055C] transition-colors font-medium"
                    >
                      {detail.value}
                    </a>
                  ) : (
                    <p class="text-lg text-steel-800 font-medium">{detail.value}</p>
                  )}
                </div>
              ))}
            </div>
          </div>

          <!-- Working hours -->
          <div>
            <h2 class="font-serif text-2xl font-semibold text-steel-800 mb-6">
              Godziny pracy
            </h2>
            <ul class="space-y-3">
              {workingHours.map((item) => (
                <li class="flex justify-between text-lg">
                  <span class="text-steel-600">{item.day}</span>
                  <span class="text-steel-800 font-medium">{item.hours}</span>
                </li>
              ))}
            </ul>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="max-w-xl mx-auto text-center space-y-6">
        <p class="text-lg text-muted-foreground">
          Masz pytania? Zadzwoń lub napisz - chętnie odpowiem.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+48123456789" class="inline-flex items-center justify-center bg-[#F2055C] hover:bg-[#d9044f] text-white px-8 py-3 text-lg font-semibold shadow-md hover:shadow-lg transition-all rounded-md">
            Zadzwoń
          </a>
          <a href="mailto:kontakt@pracowniamysli.pl" class="inline-flex items-center justify-center bg-steel-200 hover:bg-steel-300 text-steel-800 px-8 py-3 text-lg font-semibold shadow-md hover:shadow-lg transition-all rounded-md">
            Napisz email
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
